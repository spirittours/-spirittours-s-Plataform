# ===== RATE LIMITING =====
AI_RATE_LIMIT_WINDOW=300000
AI_RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_PREMIUM_MAX=500

# ===== LOGGING =====
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
AI_LOG_REQUESTS=true
