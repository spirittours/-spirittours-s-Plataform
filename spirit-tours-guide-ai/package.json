{
  "name": "spirit-tours-guide-ai",
  "version": "1.0.0",
  "description": "Sistema de GuÃ­a Virtual con IA Multiperspectiva, Rutas Inteligentes y PWA",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:pwa",
    "build:frontend": "cd frontend && npm run build",
    "build:pwa": "node scripts/build-pwa.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "deploy": "npm run build && npm run deploy:server",
    "deploy:server": "pm2 start ecosystem.config.js --env production",
    "pwa:generate-icons": "node scripts/generate-pwa-icons.js",
    "pwa:test": "workbox generateSW workbox-config.js"
  },
  "keywords": [
    "tourism",
    "ai",
    "guide",
    "multi-perspective",
    "pwa",
    "religious-tourism",
    "cultural-tourism",
    "real-time-tracking",
    "notifications"
  ],
  "author": "Spirit Tours Team",
  "license": "MIT",
