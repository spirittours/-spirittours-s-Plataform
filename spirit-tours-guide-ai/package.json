    "express-rate-limit": "^7.1.5",
    "qrcode": "^1.5.3",
    "web-push": "^3.6.6",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/node": "^20.10.5",
