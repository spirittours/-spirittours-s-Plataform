PORT=3001
CORS_ORIGIN=*

# APIs de IA - Multi-Provider
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-claude-key
GOOGLE_AI_API_KEY=your-gemini-key
GROK_API_KEY=your-grok-key
META_LLAMA_API_KEY=your-meta-key
TOGETHER_API_KEY=your-together-key
QWEN_API_KEY=your-qwen-key
DEEPSEEK_API_KEY=your-deepseek-key

# Base de Datos
DATABASE_URL=postgresql://user:password@localhost:5432/spirit_tours
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://localhost:27017/spirit_tours

# Mapas
MAPBOX_TOKEN=pk.eyJ1IjoieW91ci11c2VybmFtZSIsImEiOiJjbGpobW5ycjQwMDAwM3BzYnN0ZjJ0NzNsIn0.your-token
GOOGLE_MAPS_API_KEY=AIzaSyYour-Google-Maps-Key

# Notificaciones Push
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=mailto:your-email@spirit-tours.com

# OneSignal (Notificaciones Push alternativa)
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=Spirit Tours <noreply@spirit-tours.com>

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Orchestrator
AI_DEFAULT_STRATEGY=cascade
AI_FALLBACK_CHAIN=grok,meta,qwen,openai
AI_COST_LIMIT=0.05
AI_DEFAULT_LANGUAGE=es
AI_TIMEOUT=30000

# Routes Manager
ROUTE_DEVIATION_THRESHOLD=100
ROUTE_DEFAULT_AVG_SPEED=30

# Cache
CACHE_EXPIRY=86400000
ENABLE_CACHE=true

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=7d

# Seguridad
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# PWA
PWA_CACHE_VERSION=v1.0.0
PWA_ENABLE_OFFLINE=true
PWA_PREFETCH_ROUTES=true

# Social Media
FACEBOOK_APP_ID=your-facebook-app-id
TWITTER_API_KEY=your-twitter-api-key
INSTAGRAM_ACCESS_TOKEN=your-instagram-token

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y
MIXPANEL_TOKEN=your-mixpanel-token

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Features Flags
FEATURE_AI_GENERATION=true
FEATURE_REALTIME_TRACKING=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_SOCIAL_SHARING=true
FEATURE_QR_VERIFICATION=true

# Development
DEBUG=spirit-tours:*
