# Spirit Tours - Staging Environment Configuration
# DO NOT commit actual credentials - this is a template

# Environment
NODE_ENV=staging
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=staging-db.spirittours.com
DB_PORT=5432
DB_NAME=spirittours_staging
DB_USER=spirittours_staging_user
DB_PASSWORD=CHANGE_ME_STAGING_DB_PASSWORD
DB_SSL=true
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000

# JWT Authentication
JWT_SECRET=CHANGE_ME_STAGING_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=24h

# API Configuration
API_BASE_URL=https://staging-api.spirittours.com
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Frontend Configuration
FRONTEND_URL=https://staging.spirittours.com
CORS_ORIGIN=https://staging.spirittours.com

# Redis Cache (optional)
REDIS_HOST=staging-redis.spirittours.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STAGING_REDIS_PASSWORD
REDIS_TTL=3600

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=staging@spirittours.com
SMTP_PASSWORD=CHANGE_ME_STAGING_EMAIL_PASSWORD
EMAIL_FROM=staging@spirittours.com

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/staging.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Banking API Integration (Staging)
BBVA_API_URL=https://sandbox.bbva.com/api
BBVA_CLIENT_ID=CHANGE_ME_BBVA_STAGING_CLIENT_ID
BBVA_CLIENT_SECRET=CHANGE_ME_BBVA_STAGING_CLIENT_SECRET

SANTANDER_API_URL=https://sandbox.santander.com.mx/api
SANTANDER_CLIENT_ID=CHANGE_ME_SANTANDER_STAGING_CLIENT_ID
SANTANDER_CLIENT_SECRET=CHANGE_ME_SANTANDER_STAGING_CLIENT_SECRET

# Payment Gateway (Staging)
STRIPE_PUBLIC_KEY=pk_test_CHANGE_ME
STRIPE_SECRET_KEY=sk_test_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME

# Monitoring & Analytics
SENTRY_DSN=https://CHANGE_ME@sentry.io/PROJECT_ID
NEW_RELIC_LICENSE_KEY=CHANGE_ME_NEW_RELIC_KEY
NEW_RELIC_APP_NAME=SpiritTours-Staging

# Feature Flags
ENABLE_BANK_RECONCILIATION=true
ENABLE_AUTOMATIC_ALERTS=true
ENABLE_MULTI_CURRENCY=false
ENABLE_ADVANCED_REPORTS=true

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,xlsx,csv
UPLOAD_PATH=./uploads/staging

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CSRF_PROTECTION=true
SESSION_SECRET=CHANGE_ME_STAGING_SESSION_SECRET

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=spirittours-staging-backups
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET
AWS_REGION=us-east-1
