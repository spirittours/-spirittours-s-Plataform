# ============================================
# Spirit Tours - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ==================== AUTHENTICATION ====================
# Secret key for JWT token signing (generate a secure random string)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# Token expiration time (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# ==================== STRIPE PAYMENT ====================
# Stripe API Keys (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret (get from https://dashboard.stripe.com/webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ==================== SENDGRID EMAIL ====================
# SendGrid API Key (get from https://app.sendgrid.com/settings/api_keys)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Email Configuration
FROM_EMAIL=noreply@spirittours.com
FROM_NAME=Spirit Tours

# ==================== DATABASE ====================
# PostgreSQL Configuration (for future migration)
DATABASE_URL=postgresql://user:password@localhost:5432/spirittours
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spirittours
DB_USER=postgres
DB_PASSWORD=your_database_password

# ==================== REDIS ====================
# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==================== APPLICATION ====================
# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=True

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
ALLOW_CREDENTIALS=True

# API Configuration
API_V1_PREFIX=/api/v1
API_TITLE=Spirit Tours API
API_VERSION=2.0.0

# ==================== SECURITY ====================
# Password Requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_UPPERCASE=True
REQUIRE_PASSWORD_LOWERCASE=True
REQUIRE_PASSWORD_DIGIT=True
REQUIRE_PASSWORD_SPECIAL=False

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ==================== LOGGING ====================
# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=logs/spirittours.log

# ==================== EXTERNAL SERVICES ====================
# AI Services (if needed)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# AWS Configuration (if needed)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=spirittours-uploads

# ==================== FEATURE FLAGS ====================
# Enable/Disable Features
ENABLE_2FA=False
ENABLE_EMAIL_VERIFICATION=True
ENABLE_PAYMENT_SANDBOX=True  # Use Stripe test mode
ENABLE_ANALYTICS=True

# ==================== FRONTEND ====================
# Frontend URL (for email links and redirects)
FRONTEND_URL=http://localhost:3000

# ==================== MONITORING ====================
# Sentry Configuration (for error tracking)
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# ==================== NOTES ====================
# How to generate a secure SECRET_KEY:
# Python: python -c "import secrets; print(secrets.token_urlsafe(32))"
# OpenSSL: openssl rand -base64 32
#
# Stripe Test Cards:
# Success: 4242 4242 4242 4242
# Decline: 4000 0000 0000 0002
# Requires Auth: 4000 0025 0000 3155
#
# SendGrid Setup:
# 1. Create account at https://sendgrid.com
# 2. Verify sender identity
# 3. Create API key with "Mail Send" permission
#
# ⚠️ SECURITY REMINDER:
# - Never commit .env file to git
# - Use different keys for dev/staging/production
# - Rotate keys regularly
# - Use environment-specific configurations
