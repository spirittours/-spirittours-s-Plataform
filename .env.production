# Spirit Tours - Production Environment Configuration
# CRITICAL: Never commit actual credentials to version control

# Environment
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=prod-db.spirittours.com
DB_PORT=5432
DB_NAME=spirittours_production
DB_USER=spirittours_prod_user
DB_PASSWORD=CHANGE_ME_PRODUCTION_DB_PASSWORD_STRONG
DB_SSL=true
DB_MAX_CONNECTIONS=50
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# JWT Authentication
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_STRONG_MIN_64_CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_BASE_URL=https://api.spirittours.com
API_RATE_LIMIT=200
API_TIMEOUT=30000
API_VERSION=v1

# Frontend Configuration
FRONTEND_URL=https://www.spirittours.com
CORS_ORIGIN=https://www.spirittours.com,https://admin.spirittours.com

# Redis Cache
REDIS_HOST=prod-redis.spirittours.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_PRODUCTION_REDIS_PASSWORD_STRONG
REDIS_TTL=3600
REDIS_CLUSTER_MODE=true

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@spirittours.com
SMTP_PASSWORD=CHANGE_ME_PRODUCTION_EMAIL_PASSWORD
EMAIL_FROM=noreply@spirittours.com
EMAIL_REPLY_TO=support@spirittours.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/production.log
LOG_MAX_SIZE=50m
LOG_MAX_FILES=30
LOG_COMPRESS=true

# Banking API Integration (Production)
BBVA_API_URL=https://api.bbva.com
BBVA_CLIENT_ID=CHANGE_ME_BBVA_PROD_CLIENT_ID
BBVA_CLIENT_SECRET=CHANGE_ME_BBVA_PROD_CLIENT_SECRET

SANTANDER_API_URL=https://api.santander.com.mx
SANTANDER_CLIENT_ID=CHANGE_ME_SANTANDER_PROD_CLIENT_ID
SANTANDER_CLIENT_SECRET=CHANGE_ME_SANTANDER_PROD_CLIENT_SECRET

BANAMEX_API_URL=https://api.banamex.com.mx
BANAMEX_CLIENT_ID=CHANGE_ME_BANAMEX_PROD_CLIENT_ID
BANAMEX_CLIENT_SECRET=CHANGE_ME_BANAMEX_PROD_CLIENT_SECRET

# Payment Gateway (Production)
STRIPE_PUBLIC_KEY=pk_live_CHANGE_ME
STRIPE_SECRET_KEY=sk_live_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME

PAYPAL_CLIENT_ID=CHANGE_ME_PAYPAL_CLIENT_ID
PAYPAL_CLIENT_SECRET=CHANGE_ME_PAYPAL_CLIENT_SECRET
PAYPAL_MODE=live

# SAT (Mexican Tax Authority) Integration
SAT_RFC=CHANGE_ME_COMPANY_RFC
SAT_CERTIFICATE_PATH=./certificates/sat_cert.pem
SAT_PRIVATE_KEY_PATH=./certificates/sat_key.pem
SAT_PASSWORD=CHANGE_ME_SAT_CERTIFICATE_PASSWORD

# Monitoring & Analytics
SENTRY_DSN=https://CHANGE_ME@sentry.io/PROJECT_ID
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

NEW_RELIC_LICENSE_KEY=CHANGE_ME_NEW_RELIC_KEY
NEW_RELIC_APP_NAME=SpiritTours-Production

DATADOG_API_KEY=CHANGE_ME_DATADOG_KEY
DATADOG_APP_KEY=CHANGE_ME_DATADOG_APP_KEY

# Feature Flags
ENABLE_BANK_RECONCILIATION=true
ENABLE_AUTOMATIC_ALERTS=true
ENABLE_MULTI_CURRENCY=true
ENABLE_ADVANCED_REPORTS=true
ENABLE_AI_FRAUD_DETECTION=true
ENABLE_AUTOMATIC_BACKUPS=true

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,xlsx,csv,xml
UPLOAD_PATH=./uploads/production
CDN_URL=https://cdn.spirittours.com

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=200
ENABLE_CSRF_PROTECTION=true
ENABLE_HELMET_SECURITY=true
ENABLE_RATE_LIMITING=true
SESSION_SECRET=CHANGE_ME_PRODUCTION_SESSION_SECRET_STRONG

# SSL/TLS
SSL_CERTIFICATE_PATH=./certificates/ssl_cert.pem
SSL_PRIVATE_KEY_PATH=./certificates/ssl_key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_S3_BUCKET=spirittours-prod-backups
BACKUP_ENCRYPTION=true
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET
AWS_REGION=us-east-1

# Database Replication
DB_READ_REPLICA_HOST=prod-db-replica.spirittours.com
DB_READ_REPLICA_PORT=5432
ENABLE_READ_REPLICA=true

# High Availability
CLUSTER_MODE=true
CLUSTER_WORKERS=4
HEALTH_CHECK_INTERVAL=30000
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# Performance
CACHE_ENABLED=true
CACHE_TTL=3600
COMPRESSION_ENABLED=true
STATIC_ASSETS_CDN=https://cdn.spirittours.com
