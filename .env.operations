# ==========================================
# Spirit Tours - Operations Module Configuration
# ==========================================

# Database Configuration
DATABASE_URL=postgresql://spirit_tours_user:secure_password_here@localhost:5432/spirit_tours
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# WhatsApp Business API Configuration
WHATSAPP_ENABLED=true
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# OpenAI API Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=your_org_id_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_LANGUAGES=spa+eng
OCR_DPI=300
OCR_PREPROCESSING=true

# ML/AI Configuration
ML_MODELS_PATH=models/predictive
ML_ENABLE_TRAINING=false
ML_ANOMALY_THRESHOLD=0.85
ML_FRAUD_THRESHOLD=0.70

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_ENVIRONMENT=development

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=notifications@spirittours.com
SMTP_PASSWORD=your_email_password_here
SMTP_FROM_EMAIL=noreply@spirittours.com
SMTP_FROM_NAME=Spirit Tours Operations

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true
REDIS_TTL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/operations.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,xlsx,xls,csv
UPLOAD_DIRECTORY=uploads/operations

# Feature Flags
FEATURE_WHATSAPP_NOTIFICATIONS=true
FEATURE_OCR_PROCESSING=true
FEATURE_AI_PREDICTIONS=true
FEATURE_FRAUD_DETECTION=true
FEATURE_CHATBOT=true
FEATURE_AUTO_VALIDATION=true

# Performance Configuration
MAX_WORKERS=4
REQUEST_TIMEOUT=30
BATCH_SIZE=100

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=true
METRICS_ENABLED=true