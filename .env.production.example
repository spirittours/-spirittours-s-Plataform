# Spirit Tours - Production Environment Variables
# Version: 1.0.0
# Copy this file to .env.production and fill in the actual values

# ============================================
# APPLICATION SETTINGS
# ============================================
ENVIRONMENT=production
DEBUG=false
APP_NAME=Spirit Tours API
APP_VERSION=1.0.0
SECRET_KEY=your-super-secret-key-min-32-characters-long-change-this
PORT=8000

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://spirittours:PASSWORD@localhost:5432/spirittours_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_ECHO=false

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://:PASSWORD@localhost:6379/0
REDIS_PASSWORD=your-redis-password

# ============================================
# SECURITY
# ============================================
JWT_SECRET=your-jwt-secret-key-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS SETTINGS
# ============================================
ALLOWED_ORIGINS=https://spirittours.com,https://www.spirittours.com,https://api.spirittours.com

# ============================================
# EMAIL CONFIGURATION (SendGrid)
# ============================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=SG.your-sendgrid-api-key
EMAIL_FROM=noreply@spirittours.com

# ============================================
# PAYMENT GATEWAY (Stripe)
# ============================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# MONITORING (Sentry)
# ============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# AI SERVICES
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ============================================
# AWS SERVICES
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=spirit-tours-backups-us-east-1

# ============================================
# CLOUDFLARE (Optional CDN)
# ============================================
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_API_TOKEN=your-api-token

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=INFO
ENABLE_METRICS=true

# ============================================
# GRAFANA
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-strong-password

# ============================================
# SOCIAL MEDIA INTEGRATIONS
# ============================================
WHATSAPP_ACCESS_TOKEN=your-whatsapp-token
FACEBOOK_PAGE_ACCESS_TOKEN=your-facebook-token
INSTAGRAM_ACCESS_TOKEN=your-instagram-token

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_RETENTION_DAYS=30
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AI_AGENTS=true
ENABLE_SOCIAL_MEDIA=true
ENABLE_PAYMENT_GATEWAY=true
