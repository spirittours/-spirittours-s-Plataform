# ========================================
# $100K IA MULTI-MODELO UPGRADE - FASE 2
# Environment Variables Configuration
# ========================================

# ===== DATABASE =====
DATABASE_URL=postgresql://user:password@localhost:5432/webapp_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=webapp_db
DATABASE_USER=user
DATABASE_PASSWORD=password

# ===== REDIS CACHE =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== JWT & AUTHENTICATION =====
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
BCRYPT_ROUNDS=12

# ===== SERVER CONFIGURATION =====
NODE_ENV=production
PORT=3000
HOST=localhost
API_BASE_URL=http://localhost:3000/api

# ===== FASE 2: AI MULTI-MODELO PROVIDERS =====

# OpenAI (GPT-4, GPT-4 Omni)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id-here

# Anthropic (Claude 3.5 Sonnet, Claude 4, Claude 4.5)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google AI (Gemini 2.0 Flash, Gemini Pro)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
GOOGLE_PROJECT_ID=your-google-project-id-here

# Alibaba Cloud (Qwen 2.5 72B)
ALIBABA_API_KEY=your-alibaba-qwen-api-key-here
ALIBABA_REGION=us-west-1

# DeepSeek (DeepSeek V3)
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# xAI - Elon Musk (Grok Beta)
XAI_API_KEY=your-xai-grok-api-key-here

# Meta AI (Llama 3.3 70B)
META_API_KEY=your-meta-llama-api-key-here

# Mistral AI (Mistral Large 2)
MISTRAL_API_KEY=your-mistral-api-key-here

# ===== AI MULTI-MODEL MANAGER CONFIGURATION =====
AI_DEFAULT_MODEL=gpt-4
AI_CACHE_ENABLED=true
AI_RATE_LIMIT_ENABLED=true
AI_LOAD_BALANCING=true
AI_MAX_RETRIES=3
AI_TIMEOUT=120000
AI_CACHE_TTL=3600

# ===== COST OPTIMIZATION =====
AI_COST_TRACKING=true
AI_BUDGET_LIMIT_DAILY=100.00
AI_BUDGET_LIMIT_MONTHLY=3000.00
AI_COST_ALERTS=true

# ===== SECURITY & PRIVACY =====
AI_PRIVACY_MODE=false
AI_DATA_RETENTION_DAYS=30
AI_AUDIT_LOGGING=true

# ===== PERFORMANCE MONITORING =====
AI_METRICS_ENABLED=true
AI_HEALTH_CHECK_INTERVAL=60000
AI_PERFORMANCE_TRACKING=true

# ===== FALLBACK & FAILOVER =====
AI_FALLBACK_MODELS=claude-3.5-sonnet,gemini-2.0-flash,qwen-2.5-72b
AI_FAILOVER_ENABLED=true
AI_AUTO_RETRY=true

# ===== CONSENSUS & COMPARISON =====
AI_CONSENSUS_THRESHOLD=0.7
AI_MAX_CONSENSUS_MODELS=5
AI_COMPARISON_ENABLED=true

# ===== RATE LIMITING =====
AI_RATE_LIMIT_WINDOW=300000
AI_RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_PREMIUM_MAX=500

# ===== LOGGING =====
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
AI_LOG_REQUESTS=true
AI_LOG_RESPONSES=false

# ===== EMAIL & NOTIFICATIONS =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourcompany.com

# ===== CORS & SECURITY =====
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true
HELMET_ENABLED=true

# ===== FILE UPLOADS =====
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_STORAGE_PATH=uploads/

# ===== SESSION & COOKIES =====
SESSION_SECRET=your-session-secret-key-here
SESSION_MAX_AGE=86400000
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true

# ===== WEBHOOK & INTEGRATIONS =====
WEBHOOK_SECRET=your-webhook-secret-here
INTEGRATION_TIMEOUT=30000

# ===== MONITORING & HEALTH =====
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# ===== THIRD-PARTY SERVICES =====
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
SENDGRID_API_KEY=your-sendgrid-api-key

# ===== DEVELOPMENT ONLY =====
DEBUG=webapp:*
VERBOSE_LOGGING=true
SQL_LOGGING=false