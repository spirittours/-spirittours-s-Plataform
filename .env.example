# Spirit Tours Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# ====================
# ENVIRONMENT
# ====================
ENVIRONMENT=development
DEBUG=false
SECRET_KEY=your-secret-key-change-this-in-production-use-strong-key
API_VERSION=v1

# Configuration Manager Encryption Key (32 bytes hex)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CONFIG_ENCRYPTION_KEY=your-encryption-key-32-bytes-hex-format-change-this

# ====================
# DATABASE
# ====================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spirit_tours
DB_USER=postgres
DB_PASSWORD=spirit2024
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Database Pool Configuration
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ====================
# REDIS
# ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# ====================
# API SERVER
# ====================
API_HOST=0.0.0.0
API_PORT=8000
API_URL=http://localhost:8000
WS_URL=ws://localhost:8000
BASE_URL=http://localhost:8000

# Node.js Backend Server (for Nodemailer and Config Management)
NODE_PORT=5001
NODE_API_URL=http://localhost:5001

# ====================
# FRONTEND
# ====================
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=${API_URL}
REACT_APP_WS_URL=${WS_URL}

# ====================
# CORS
# ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://spirittours.com,https://www.spirittours.com
ALLOWED_HOSTS=localhost,127.0.0.1,spirittours.com,*.spirittours.com

# ====================
# EMAIL SERVICE
# ====================
EMAIL_PROVIDER=sendgrid
DEFAULT_FROM_EMAIL=noreply@spirittours.com
DEFAULT_FROM_NAME=Spirit Tours

# SendGrid Configuration
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxx

# SMTP Configuration (Alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# ====================
# PAYMENT GATEWAYS
# ====================

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# PayPal
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=xxxxxxxxxxxxx
PAYPAL_CLIENT_SECRET=xxxxxxxxxxxxx

# MercadoPago
MERCADOPAGO_PUBLIC_KEY=TEST-xxxxxxxxxxxxx
MERCADOPAGO_ACCESS_TOKEN=TEST-xxxxxxxxxxxxx

# ====================
# AUTHENTICATION
# ====================
JWT_SECRET_KEY=${SECRET_KEY}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=xxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxxxxxxxxxx
FACEBOOK_APP_ID=xxxxxxxxxxxxx
FACEBOOK_APP_SECRET=xxxxxxxxxxxxx

# ====================
# FILE STORAGE
# ====================
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx,xls,xlsx
STATIC_FILES_PATH=/app/static
MEDIA_FILES_PATH=/app/media

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=xxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxx
AWS_S3_BUCKET=spirit-tours-uploads
AWS_S3_REGION=us-east-1

# ====================
# MONITORING & LOGGING
# ====================
LOG_LEVEL=INFO
LOG_FILE=/var/log/spirit_tours/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Sentry Error Tracking
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxxxxxxxxx
SENTRY_ENVIRONMENT=${ENVIRONMENT}

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# ====================
# RATE LIMITING
# ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ====================
# SECURITY
# ====================
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_LIFETIME_HOURS=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# ====================
# GOOGLE ANALYTICS
# ====================
GA_TRACKING_ID=UA-xxxxxxxxxxxxx
GTM_CONTAINER_ID=GTM-xxxxxxxxxxxxx

# ====================
# SOCIAL MEDIA
# ====================
TWITTER_API_KEY=xxxxxxxxxxxxx
TWITTER_API_SECRET=xxxxxxxxxxxxx
INSTAGRAM_CLIENT_ID=xxxxxxxxxxxxx
INSTAGRAM_CLIENT_SECRET=xxxxxxxxxxxxx

# ====================
# BACKUP
# ====================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# ====================
# DEVELOPMENT TOOLS
# ====================
PGADMIN_EMAIL=admin@spirittours.com
PGADMIN_PASSWORD=admin123
JUPYTER_TOKEN=xxxxxxxxxxxxx

# ====================
# FEATURE FLAGS
# ====================
FEATURE_WEBSOCKET_ENABLED=true
FEATURE_EMAIL_ENABLED=true
FEATURE_PAYMENT_ENABLED=true
FEATURE_MULTI_LANGUAGE=false
FEATURE_DARK_MODE=true