# Environment Configuration Template
# Copy this file to .env and fill in your values

# =================================
# DATABASE
# =================================
MONGODB_URI=mongodb://localhost:27017/spirittours
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme
MONGO_DATABASE=spirittours

# =================================
# REDIS CACHE
# =================================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=changeme
REDIS_DB=0

# =================================
# APPLICATION
# =================================
NODE_ENV=development
PORT=5000
JWT_SECRET=your-secret-key-change-in-production

# =================================
# OPENAI (Required for Fase 3)
# =================================
OPENAI_API_KEY=sk-...

# =================================
# FINE-TUNING (Optional - Fase 2)
# =================================
TOGETHER_AI_API_KEY=
REPLICATE_API_TOKEN=

# =================================
# VECTOR DATABASE (Optional - Fase 2)
# =================================
VECTOR_DB_BACKEND=local
# VECTOR_DB_BACKEND=pinecone
# VECTOR_DB_BACKEND=milvus

PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX=

MILVUS_ADDRESS=localhost:19530

# =================================
# LOCAL INFERENCE (Optional - Fase 3)
# =================================
OLLAMA_URL=http://localhost:11434
VLLM_URL=http://localhost:8000
TGI_URL=http://localhost:8080
ENABLE_FALLBACK=true

# =================================
# OPTIMIZATION
# =================================
QUERY_OPTIMIZER_ENABLED=true
SLOW_QUERY_THRESHOLD=500
AUTO_CREATE_INDEXES=false
CACHE_ENABLED=true
CACHE_TTL_DEFAULT=300

# =================================
# SECURITY
# =================================
INPUT_VALIDATION_ENABLED=true
RATE_LIMITING_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
SECURITY_AUDIT_ENABLED=true

# =================================
# MONITORING
# =================================
HEALTH_CHECK_INTERVAL=60000
ANALYTICS_ENABLED=true
RETENTION_DAYS=90

# =================================
# DEPLOYMENT
# =================================
LOG_LEVEL=info
MAX_REQUEST_SIZE=50mb
CORS_ORIGIN=http://localhost:3000
