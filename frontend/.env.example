# ============================================
# SPIRIT TOURS - FRONTEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local for development
# Copy to .env.production for production builds
# ============================================

# ============================================
# API CONFIGURATION
# ============================================
# Base API URL (backend server)
VITE_API_URL=http://localhost:8000/api

# WebSocket URL (for real-time notifications)
VITE_WS_URL=ws://localhost:8000/ws

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# ============================================
# AUTHENTICATION
# ============================================
# Token storage key
VITE_AUTH_TOKEN_KEY=auth_token

# Session timeout (milliseconds)
VITE_SESSION_TIMEOUT=3600000

# ============================================
# PAYMENT INTEGRATIONS
# ============================================
# Stripe Public Key (Test Mode)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# Stripe API Version
VITE_STRIPE_API_VERSION=2023-10-16

# PayPal Client ID (Sandbox)
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# PayPal Mode (sandbox | production)
VITE_PAYPAL_MODE=sandbox

# ============================================
# FILE STORAGE
# ============================================
# Maximum file size for uploads (bytes)
VITE_MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated MIME types)
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4

# File storage provider (local | s3 | cloudinary)
VITE_FILE_STORAGE_PROVIDER=local

# ============================================
# MAPS & LOCATION
# ============================================
# Mapbox Access Token
VITE_MAPBOX_TOKEN=pk.your_mapbox_token_here

# Google Maps API Key
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Default map center (lat,lng)
VITE_DEFAULT_MAP_CENTER=40.7128,-74.0060

# Default map zoom level
VITE_DEFAULT_MAP_ZOOM=12

# ============================================
# ANALYTICS & MONITORING
# ============================================
# Google Analytics Measurement ID
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry DSN (Error Tracking)
VITE_SENTRY_DSN=https://your-sentry-dsn-here

# Sentry Environment
VITE_SENTRY_ENVIRONMENT=development

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/Disable major features
VITE_ENABLE_AI_AGENTS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PORTALS=true
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_FILES=true
VITE_ENABLE_NOTIFICATIONS=true

# Enable WebSocket real-time features
VITE_ENABLE_WEBSOCKET=true

# Enable PWA (Progressive Web App)
VITE_ENABLE_PWA=true

# Enable dark mode
VITE_ENABLE_DARK_MODE=true

# Enable multi-language support
VITE_ENABLE_I18N=true

# ============================================
# AI AGENTS CONFIGURATION
# ============================================
# AI Provider (openai | anthropic | google | multiple)
VITE_AI_PROVIDER=multiple

# Enable specific AI agent tracks
VITE_ENABLE_TRACK1_AGENTS=true
VITE_ENABLE_TRACK2_AGENTS=true
VITE_ENABLE_TRACK3_AGENTS=true

# AI response timeout (milliseconds)
VITE_AI_TIMEOUT=60000

# ============================================
# PORTALS CONFIGURATION
# ============================================
# Enable B2B Portal
VITE_ENABLE_B2B_PORTAL=true

# Enable B2C Portal
VITE_ENABLE_B2C_PORTAL=true

# Enable B2B2C Portal
VITE_ENABLE_B2B2C_PORTAL=true

# Enable Commission Management
VITE_ENABLE_COMMISSION_MANAGEMENT=true

# ============================================
# NOTIFICATIONS CONFIGURATION
# ============================================
# WebSocket reconnect attempts
VITE_WS_RECONNECT_ATTEMPTS=5

# WebSocket reconnect delay (milliseconds)
VITE_WS_RECONNECT_DELAY=3000

# Toast notification duration (milliseconds)
VITE_TOAST_DURATION=4000

# Enable browser notifications
VITE_ENABLE_BROWSER_NOTIFICATIONS=true

# Enable email notifications
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# Enable SMS notifications
VITE_ENABLE_SMS_NOTIFICATIONS=false

# ============================================
# UI/UX CONFIGURATION
# ============================================
# Application name
VITE_APP_NAME=Spirit Tours CRM

# Application version
VITE_APP_VERSION=2.0.0

# Default language
VITE_DEFAULT_LANGUAGE=en

# Available languages (comma-separated)
VITE_AVAILABLE_LANGUAGES=en,es,fr,de,pt

# Default currency
VITE_DEFAULT_CURRENCY=USD

# Date format
VITE_DATE_FORMAT=MM/DD/YYYY

# Time format
VITE_TIME_FORMAT=12h

# Items per page (pagination)
VITE_ITEMS_PER_PAGE=20

# ============================================
# DEVELOPMENT & DEBUGGING
# ============================================
# Environment (development | staging | production)
VITE_ENVIRONMENT=development

# Enable debug mode
VITE_DEBUG=true

# Enable mock data (for testing without backend)
VITE_ENABLE_MOCK_DATA=true

# Log level (error | warn | info | debug)
VITE_LOG_LEVEL=info

# Enable React Query DevTools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# ============================================
# SECURITY
# ============================================
# Enable CSRF protection
VITE_ENABLE_CSRF=true

# Content Security Policy mode (report | enforce)
VITE_CSP_MODE=report

# Enable rate limiting alerts
VITE_ENABLE_RATE_LIMIT_ALERTS=true

# ============================================
# PERFORMANCE
# ============================================
# Enable lazy loading
VITE_ENABLE_LAZY_LOADING=true

# Enable code splitting
VITE_ENABLE_CODE_SPLITTING=true

# Enable image optimization
VITE_ENABLE_IMAGE_OPTIMIZATION=true

# Cache duration (milliseconds)
VITE_CACHE_DURATION=300000

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================
# Cloudinary Cloud Name (for image hosting)
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name_here

# Cloudinary Upload Preset
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset_here

# Intercom App ID (for customer support chat)
VITE_INTERCOM_APP_ID=your_intercom_app_id_here

# Hotjar Site ID (for user analytics)
VITE_HOTJAR_SITE_ID=your_hotjar_site_id_here

# ============================================
# SOCIAL MEDIA
# ============================================
# Facebook App ID
VITE_FACEBOOK_APP_ID=your_facebook_app_id_here

# Twitter API Key
VITE_TWITTER_API_KEY=your_twitter_api_key_here

# LinkedIn Client ID
VITE_LINKEDIN_CLIENT_ID=your_linkedin_client_id_here

# ============================================
# BUILD CONFIGURATION
# ============================================
# Generate source maps (true | false)
GENERATE_SOURCEMAP=false

# Build output directory
BUILD_PATH=build

# Public URL (for CDN deployment)
PUBLIC_URL=/

# ============================================
# NOTES
# ============================================
# 1. Never commit actual .env files to git
# 2. Use .env.local for development overrides
# 3. Use .env.production for production builds
# 4. Replace all placeholder values before deployment
# 5. Keep sensitive keys secure and rotate regularly
# 6. Document any new variables added here
# ============================================
